{
  "name": "lezer-java",
  "version": "0.13.0",
  "description": "lezer-based Java grammar",
  "main": "dist/index.cjs",
  "type": "module",
  "exports": {
    "import": "./dist/index.es.js",
    "require": "./dist/index.cjs"
  },
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "author": "Marijn Haverbeke <marijnh@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "lezer-generator": "^0.13.0",
    "mocha": "^8.1.3",
    "rollup": "^2.27.1",
    "@rollup/plugin-node-resolve": "^9.0.0"
  },
  "dependencies": {
    "lezer": "^0.13.0"
  },
  "repository": {
    "type" : "git",
    "url" : "https://github.com/lezer-parser/java.git"
  },
  "scripts": {
    "build": "lezer-generator src/java.grammar -o src/parser && rollup -c",
    "build-debug": "lezer-generator src/java.grammar --names -o src/parser && rollup -c",
    "prepare": "npm run build",
    "test": "mocha test/test-*.js"
  }
}
